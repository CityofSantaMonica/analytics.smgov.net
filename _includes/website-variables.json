{% capture output %}

{% comment %}
This file will generate a JSON object with generic information regarding website settings.
{% endcomment %}

{
    {% for website in site.websites %}
        "{{ website.path | split: '/' | last | replace: '.md', '' }}": {
            "domain":"{{ website.hostname }}",
            "realtime":{% if website.realtime %}true{% else %}false{% endif %}
        }{% unless forloop.last %},{% endunless %}
    {% endfor %}
}

{% endcapture %}{{ output | replace: '  ', '' | strip_newlines | strip }}